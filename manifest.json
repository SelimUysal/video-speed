{
    "manifest_version": 3,
    "name": "Video Speed",
    "version": "1.0",
    "description": "Video oynatma hızını kolayca ayarlayın! Hızlandırın, yavaşlatın, duraklatın! Video izleme keyfi!",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
